<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppWidgetBody">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@drawable/appwidget_dark_bg</item>
	</style>

	<style name="VolumeControlPanel">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">0dip</item>
		<item name="android:layout_weight">1</item>
	</style>
	
	<style name="VolumeToggleButtonPanel">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_height">0dip</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_weight">7</item>
	</style>
	
	<style name="VolumeToggleCaption">
		<item name="android:layout_height">0dip</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_weight">3</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:shadowColor">@android:color/black</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1</item>
	</style>

	<style name="WidgetColumnHorizontalDivider">
		<item name="android:layout_height">@dimen/divider_thickness</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">@drawable/appwidget_divider_flat</item>
	</style>
	
	<style name="WidgetColumnDivider">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">@dimen/divider_thickness</item>
		<item name="android:background">@drawable/appwidget_divider_flat</item>
	</style>
	
	<style name="WidgetColumnThickDivider" parent="WidgetColumnDivider">
		<item name="android:layout_width">@dimen/widedivider_thickness</item>
	</style>

	<style name="WidgetButtonDisplay">
		<item name="android:background">@drawable/appwidget_button_center</item>
		<item name="android:gravity">center</item>
	</style>
	
	<style name="WidgetButton" parent="WidgetButtonDisplay">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
	</style>
	
	<style name="WidgetButtonNudgeUp" parent="WidgetButton">
		<item name="android:src">@drawable/ic_up_light</item>
		<item name="android:contentDescription">@string/raise_volume</item>
	</style>
	
	<style name="WidgetButtonNudgeDown" parent="WidgetButton">
		<item name="android:src">@drawable/ic_down_light</item>
		<item name="android:contentDescription">@string/lower_volume</item>
	</style>
	
	<style name="ListWidgetButton" parent="WidgetButton">
		<item name="android:background">@drawable/appwidget_button_center_holo</item>
		<item name="android:layout_height">@dimen/listitem_size</item>
		<item name="android:layout_width">@dimen/listitem_size</item>
	</style>
	
	<style name="ListWidgetButtonNudgeUp" parent="ListWidgetButton">
		<item name="android:src">@drawable/ic_up_dark</item>
		<item name="android:contentDescription">@string/raise_volume</item>
	</style>
	
	<style name="ListWidgetButtonNudgeDown" parent="ListWidgetButton">
		<item name="android:src">@drawable/ic_down_dark</item>
		<item name="android:contentDescription">@string/lower_volume</item>
	</style>

	<style name="ListWidgetItemTitle">
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@android:color/black</item>
	</style>
	
	<style name="LightListViewBase">
		<item name="android:cacheColorHint">#00000000</item>
		<item name="android:background">@drawable/gradient_bg_widget_holo</item>
	</style>
	
	<style name="LightListView" parent="LightListViewBase">
		<item name="android:paddingLeft">@dimen/listitem_padding</item>
		<item name="android:paddingRight">@dimen/listitem_padding</item>
	</style>
	
	<style name="LightListViewAppWidget" parent="LightListViewBase">
		<item name="android:paddingLeft">@dimen/listitemappwidget_padding</item>
		<item name="android:paddingRight">@dimen/listitemappwidget_padding</item>
	</style>
	
</resources>
